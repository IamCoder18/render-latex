{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "target": "ES2016",
      "module": "es2022",
      "lib": ["ESNext", "ES2021"],
      "strict": true,
      "allowJs": true,
      "declaration": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }